# ==============================================
# NEIGHBORHOOD LIBRARY PLATFORM - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to version control!

# ==============================================
# DJANGO/API CONFIGURATION
# ==============================================
# Set to False in production!
DEBUG=False

# Generate a secure secret key for production
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=please-change-this-to-a-secure-random-secret-key-in-production

# Comma-separated list of allowed hosts
# Include your domain, localhost, and container names
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,api

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=neighborhood_library
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# External database port (for local connections)
POSTGRES_PORT=5432

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins for CORS
# Update with your frontend URL in production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://127.0.0.1:3000

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# API URL that the frontend will use
# In production, this should be your public API URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Node environment
NODE_ENV=production

# ==============================================
# PORT CONFIGURATION
# ==============================================
# External ports for services
API_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80

# ==============================================
# DJANGO SUPERUSER CONFIGURATION
# ==============================================
# Used for automated superuser creation
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@library.local
DJANGO_SUPERUSER_PASSWORD=admin123

# ==============================================
# LOGGING
# ==============================================
DJANGO_LOG_LEVEL=INFO

# ==============================================
# PRODUCTION DEPLOYMENT NOTES
# ==============================================
# For production deployments:
# 1. Set DEBUG=False
# 2. Generate a strong SECRET_KEY
# 3. Update ALLOWED_HOSTS with your domain
# 4. Use strong database credentials
# 5. Update CORS_ALLOWED_ORIGINS with your frontend domain
# 6. Update NEXT_PUBLIC_API_URL with your API domain
# 7. Change default DJANGO_SUPERUSER_PASSWORD
# 8. Consider using environment-specific .env files
# 9. Enable HTTPS and update URLs accordingly
# 10. Set up proper backup strategy for postgres_data volume

